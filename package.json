    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "sequelize": "^6.6.5",
    "sequelize-cli": "^6.2.0",
    "sqlite": "^4.0.23",
    "sqlite3": "^5.0.2",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/express": "^4.17.13",
    "@types/node": "^16.3.0",
    "@types/passport": "^1.0.7",
    "@types/sequelize": "^4.28.10",
    "@types/validator": "^13.6.3",
    "nodemon": "^2.0.11",
    "ts-node": "^10.0.0",
    "tsc": "^2.0.3",
    "typescript": "^4.3.5"
