{
  "name": "chat-backend",
  "version": "1.0.0",
  "description": "A simple REST API for a chat backend",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarianoAIglesias1994/chat-backend.git"
  },
  "author": "Mariano Iglesias",
  "license": "MIT",
  "main": "./lib/server.ts",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch './lib/**/*.ts' --exec 'ts-node ./lib/server.ts' -e ts",
